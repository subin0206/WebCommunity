{{>layout/header}}

<h1>게시글 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form id="form" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">글번호</label>
                <input type="text" class="form-control" id="id" value = "{{posts.id}}" readonly>
            </div>
            <div class="form-group">
            <label for="title">제목</label>
            <input type="text" class="form-control" id="title" value= "{{posts.title}}">
    </div>
            <div class="form-group">
                <label for="author"> 작성자 </label>
                <input type="text" class="form-control" id="author" value = "{{posts.user.email}}" readonly>
            </div>
            <div class="form-group">
                <label for="content"> 내용 </label>
                <textarea class="form-control" id="content">{{posts.content}}</textarea>
            </div>
            <div class = "form-group" id="inputFile">
                <input type="file" name="file" id="file" multiple="multiple"/>
            </div>

            <div class = "form-group" id="fileList">
                <table class = "table table-horizontal table-bordered">
                <tbody id="tbody">
                {{#fileList}}
                <tr>
                    <td>{{origFileName}}</td>
                    <td><button type="button" id="delete" onclick="deleteFile(this)"  value="{{id}}" class="btn btn-danger btn-xs">X</button></td>
                </tr>
                {{/fileList}}
                </tbody>
                </table>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-primary" id="btn-temp">temp</button>
    </div>
</div>

{{>layout/footer}}